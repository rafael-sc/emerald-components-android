<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"/>

    <br.com.stone.emeraldcomponents.basic.input.EmeraldMaskedEditText
        android:id="@+id/emerald_masked_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maskType="email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number:"/>

    <br.com.stone.emeraldcomponents.basic.input.EmeraldMaskedEditText
        android:id="@+id/emerald_masked_edit_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maskType="phoneNumber"/>

    <br.com.stone.emeraldcomponents.basic.input.EmeraldMaskedEditText
        android:id="@+id/emerald_masked_edit_text_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maskType="currency"/>

</LinearLayout>